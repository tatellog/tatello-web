---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/layout/Header.astro';
import HeroSlider from '@/components/sections/HeroSlider.astro';

const pageTitle = 'Tatello';
const pageDescription = 'Tania Tello - Sr. Front End Engineer with 7+ years of experience specializing in React, TypeScript, and building beautiful, accessible web experiences.';
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />

  <main id="main-content">
    <section id="hero" aria-label="Introduction">
      <HeroSlider
        email="hello@taniatello.com"
        autoPlayInterval={6000}
      />
    </section>
  </main>

  <a
    href="#main-content"
    class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-accent-pink focus:text-brand-brown focus:rounded-lg"
  >
    Skip to main content
  </a>
</Layout>

<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
</style>

---
/**
 * About Page - Personal information and introduction
 * Features infinite scroll behavior
 */
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/layout/Header.astro';
import AboutHero from '@/components/sections/AboutHero.astro';

const pageTitle = 'Tatello';
const pageDescription = "Learn more about Tania Tello - Sr. Front End Engineer passionate about crafting engaging, accessible, and user-centric web experiences.";
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Header Navigation -->
  <Header activePage="about" />

  <!-- Main Content with Infinite Scroll -->
  <main id="main-content" class="infinite-scroll-container">
    <!-- About Hero Section -->
    <AboutHero />

    <!-- Additional sections will go here -->
    <!-- The infinite scroll will loop back to the top -->
  </main>

  <!-- Skip to content link for accessibility -->
  <a
    href="#main-content"
    class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-accent-pink focus:text-brand-brown focus:rounded-lg"
  >
    Skip to main content
  </a>
</Layout>

<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

  // Infinite scroll implementation
  if (!prefersReducedMotion) {
    const container = document.querySelector('.infinite-scroll-container');

    if (container) {
      // Create scroll trigger for infinite loop effect
      ScrollTrigger.create({
        trigger: container,
        start: 'bottom bottom',
        onEnter: () => {
          // Smooth scroll back to top when reaching the bottom
          gsap.to(window, {
            duration: 0.8,
            scrollTo: { y: 0, autoKill: false },
            ease: 'power2.inOut'
          });
        }
      });
    }
  }
</script>

<style>
  /* Screen reader only utility */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  .infinite-scroll-container {
    min-height: 100vh;
  }
</style>

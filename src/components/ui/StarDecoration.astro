---
/**
 * StarDecoration - 4-pointed star decorative element
 * Used for visual accents throughout the site
 */
interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
  color?: 'pink' | 'blue' | 'orange' | 'beige';
}

const { class: className = '', size = 'md', color = 'pink' } = Astro.props;

const sizeMap = {
  sm: 'w-6 h-7',
  md: 'w-10 h-11',
  lg: 'w-16 h-18',
  xl: 'w-20 h-22'
};

const colorMap = {
  pink: '#FFC4C8',
  blue: 'text-accent-blue',
  orange: 'text-accent-orange',
  beige: 'text-slide-beige'
};
---

<svg
  class:list={['star-decoration', sizeMap[size], className]}
  viewBox="0 0 123 136"
  fill={color === 'pink' ? colorMap.pink : 'currentColor'}
  xmlns="http://www.w3.org/2000/svg"
>
  <!-- 4-pointed sparkle star -->
  <path d="M61.5 0C61.5 0 68 45 68 58C81 58 123 68 123 68C123 68 81 78 68 78C68 91 61.5 136 61.5 136C61.5 136 55 91 55 78C42 78 0 68 0 68C0 68 42 58 55 58C55 45 61.5 0 61.5 0Z" />
</svg>

<style>
  .star-decoration {
    flex-shrink: 0;
  }
</style>

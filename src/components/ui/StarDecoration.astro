---
/**
 * StarDecoration - 4-pointed star decorative element
 * Used for visual accents throughout the site
 */
interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
  color?: 'pink' | 'blue' | 'orange' | 'beige';
}

const { class: className = '', size = 'md', color = 'pink' } = Astro.props;

const sizeMap = {
  sm: 'w-6 h-7',
  md: 'w-10 h-11',
  lg: 'w-16 h-18',
  xl: 'w-20 h-22'
};

const colorMap = {
  pink: '#FFC4C8',
  blue: 'text-accent-blue',
  orange: 'text-accent-orange',
  beige: 'text-slide-beige'
};
---

<svg
  class:list={['star-decoration', sizeMap[size], className]}
  viewBox="0 0 50 60"
  fill={color === 'pink' ? colorMap.pink : 'currentColor'}
  xmlns="http://www.w3.org/2000/svg"
>
  <!-- 4-pointed sparkle star with curved pinched sides -->
  <path d="M25 0 C26 20 26 28 50 30 C26 32 26 40 25 60 C24 40 24 32 0 30 C24 28 24 20 25 0Z"/>
</svg>

<style>
  .star-decoration {
    flex-shrink: 0;
  }
</style>

---
/**
 * HeroSkills - "Oh boy, can I code" skills slide
 * Orange background with floating tech logos
 */

const techLogos = [
  { name: 'React', src: '/images/tech/react.svg', position: 'top-[186px] left-1/2 -translate-x-1/2', size: 'w-[60px] h-[51px]', opacity: 'opacity-60' },
  { name: 'Redux', src: '/images/tech/redux.svg', position: 'top-[186px] left-[446px]', size: 'w-14 h-14', opacity: '' },
  { name: 'JavaScript', src: '/images/tech/javascript.svg', position: 'top-[286px] left-[261px]', size: 'w-12 h-12', opacity: '' },
  { name: 'TypeScript', src: '/images/tech/typescript.svg', position: 'top-[324px] right-[240px]', size: 'w-[54px] h-[60px]', opacity: '' },
  { name: 'Cypress', src: '/images/tech/cypress.svg', position: 'top-[211px] right-[400px]', size: 'w-[120px] h-[49px]', opacity: '' },
  { name: 'Testing', src: '/images/tech/testing.svg', position: 'top-[454px] left-[144px]', size: 'w-[92px] h-[92px]', opacity: '' },
  { name: 'Next.js', src: '/images/tech/nextjs.svg', position: 'bottom-[180px] left-[145px]', size: 'w-[111px] h-[22px]', opacity: '' },
  { name: 'Python', src: '/images/tech/python.svg', position: 'bottom-[140px] left-[409px]', size: 'w-[50px] h-[51px]', opacity: '' },
  { name: 'Node.js', src: '/images/tech/nodejs.svg', position: 'bottom-[140px] right-[330px]', size: 'w-[51px] h-[51px]', opacity: '' },
  { name: 'GraphQL', src: '/images/tech/graphql.svg', position: 'top-[540px] right-[200px]', size: 'w-[53px] h-[50px]', opacity: '' },
];
---

<section
  id="slide-skills"
  class="hero-slide absolute inset-0 bg-slide-orange overflow-hidden"
  data-slide="3"
  data-active="false"
>
  <!-- Floating Tech Logos -->
  <div class="tech-logos hidden lg:block">
    {techLogos.map((logo, index) => (
      <div
        class:list={[
          'tech-logo absolute pointer-events-none',
          logo.position,
          logo.size,
          logo.opacity
        ]}
        data-logo-index={index}
      >
        <img
          src={logo.src}
          alt={logo.name}
          class="w-full h-full object-contain"
          loading="lazy"
        />
      </div>
    ))}
  </div>

  <!-- Code brackets decoration -->
  <div class="absolute top-[calc(50%-80px)] left-[calc(50%-350px)] text-slide-orange-accent font-display text-[128px] leading-none pointer-events-none hidden lg:block code-bracket-left">
    &lt;
  </div>
  <div class="absolute top-[calc(50%+40px)] right-[calc(50%-380px)] text-slide-orange-accent font-display text-[128px] leading-none pointer-events-none hidden lg:block code-bracket-right">
    /&gt;
  </div>

  <!-- Cross decorations -->
  <div class="absolute top-[328px] left-[calc(50%-290px)] rotate-45 pointer-events-none">
    <svg width="40" height="38" viewBox="0 0 40 38" fill="none" class="cross-decoration">
      <path d="M20 0V38M0 19H40" stroke="#feb25e" stroke-width="3"/>
    </svg>
  </div>

  <div class="absolute top-[484px] right-[calc(50%-360px)] rotate-45 pointer-events-none">
    <svg width="34" height="35" viewBox="0 0 34 35" fill="none" class="cross-decoration">
      <path d="M17 0V35M0 17.5H34" stroke="#673437" stroke-width="2"/>
    </svg>
  </div>

  <!-- Main Content -->
  <div class="relative z-10 flex flex-col items-center justify-center h-full px-6 pt-20">
    <!-- Title -->
    <div class="text-center">
      <h2 class="hero-title font-display text-brand-brown leading-[1.1]">
        <span class="block text-[clamp(3rem,10vw,8rem)]">Oh boy,</span>
        <span class="block text-[clamp(3rem,10vw,8rem)]">can I code</span>
      </h2>
    </div>

    <!-- Subtitle -->
    <p class="hero-subtitle mt-8 text-brand-gray text-center text-lg md:text-xl leading-relaxed max-w-[845px] font-sans px-4">
      Expert in React-Native. Highly skilled at React.js, JavaScript, and Redux. Also experienced in Next.js, styled-components, Typescript GraphQL, and Flex-Box. Characterized by sticking to good practices with frameworks such as React-Testing Library, Jest and E2E testing with Cypress.
    </p>
  </div>

  <!-- Background text hints (faded, sides) -->
  <div class="hidden xl:block absolute top-[331px] left-[-200px] text-brand-brown opacity-20 font-display text-[128px] leading-[1.1] text-center whitespace-nowrap pointer-events-none">
    <p>Technology</p>
    <p>Mentor</p>
  </div>

  <div class="hidden xl:block absolute top-[305px] right-[-200px] text-brand-brown opacity-20 font-display text-[128px] leading-[1.1] text-center pointer-events-none">
    <p>Hi! I'm</p>
    <p>Tania Tello</p>
  </div>
</section>

<style>
  .hero-slide {
    transition: opacity 0.6s ease-in-out, transform 0.6s ease-in-out;
  }

  .hero-slide[data-active="false"] {
    opacity: 0;
    pointer-events: none;
  }

  .hero-slide[data-active="true"] {
    opacity: 1;
    pointer-events: auto;
  }

  .tech-logo {
    animation: float 6s ease-in-out infinite;
  }

  .tech-logo:nth-child(odd) {
    animation-delay: -3s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
</style>

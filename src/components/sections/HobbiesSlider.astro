<script>
  import gsap from 'gsap';

  const slider = document.getElementById('hobbies-slider');
  const contents = document.querySelectorAll('.hobby-content');
  const illustrations = document.querySelectorAll('.hobby-illustration');
  const dots = document.querySelectorAll('.hobby-dot');
  const ghostTop = document.getElementById('ghost-top');
  const ghostBottom = document.getElementById('ghost-bottom');
  const prevBtn = document.getElementById('prev-hobby');
  const nextBtn = document.getElementById('next-hobby');
  const progressBar = document.getElementById('hobby-progress');
  const floatingClouds = document.getElementById('floating-clouds');

  const hobbyTitles = ['Mentoring', 'Travel', 'Luna', 'Family', 'Painting'];
  const hobbyIds = ['mentoring', 'travel', 'luna', 'family', 'painting'];

  let currentHobby = 0;
  const totalHobbies = contents.length;
  const autoPlayInterval = parseInt(slider?.dataset.autoplayInterval || '5000');
  let isAutoPlaying = true;
  let autoPlayTimer: ReturnType<typeof setInterval> | null = null;
  let progressAnimation: gsap.core.Tween | null = null;

  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

  function getPrevHobbyTitle(index: number) {
    const prevIndex = index === 0 ? totalHobbies - 1 : index - 1;
    return hobbyTitles[prevIndex];
  }

  function getNextHobbyTitle(index: number) {
    const nextIndex = (index + 1) % totalHobbies;
    return hobbyTitles[nextIndex];
  }

  function updateFloatingClouds(hobbyId: string) {
    if (!floatingClouds || prefersReducedMotion) return;

    if (hobbyId === 'travel') {
      gsap.to(floatingClouds, { opacity: 1, duration: 0.5, ease: 'power2.out' });
    } else {
      gsap.to(floatingClouds, { opacity: 0, duration: 0.3, ease: 'power2.in' });
    }
  }

  function updateHobby(index: number, direction: 'next' | 'prev' = 'next') {
    if (index < 0 || index >= totalHobbies || index === currentHobby) return;

    const oldHobby = currentHobby;
    currentHobby = index;

    const yOffset = direction === 'next' ? -80 : 80;
    const yFrom = direction === 'next' ? 80 : -80;

    // Animate content
    contents.forEach((content, i) => {
      const el = content as HTMLElement;

      if (i === index) {
        el.setAttribute('data-active', 'true');

        if (!prefersReducedMotion) {
          gsap.fromTo(el,
            { opacity: 0, y: yFrom },
            { opacity: 1, y: 0, duration: 0.6, ease: 'power3.out' }
          );

          // Animate title and description separately
          const title = el.querySelector('.hobby-title');
          const desc = el.querySelector('.hobby-description');

          gsap.fromTo(title,
            { opacity: 0, y: 30 },
            { opacity: 1, y: 0, duration: 0.5, delay: 0.1, ease: 'power3.out' }
          );

          gsap.fromTo(desc,
            { opacity: 0, y: 20 },
            { opacity: 1, y: 0, duration: 0.5, delay: 0.25, ease: 'power3.out' }
          );
        }
      } else if (i === oldHobby) {
        if (!prefersReducedMotion) {
          gsap.to(el, {
            opacity: 0,
            y: yOffset,
            duration: 0.4,
            ease: 'power2.in',
            onComplete: () => {
              el.setAttribute('data-active', 'false');
              gsap.set(el, { y: 0 });
            }
          });
        } else {
          el.setAttribute('data-active', 'false');
        }
      }
    });

    // Animate illustrations
    illustrations.forEach((illus, i) => {
      const el = illus as HTMLElement;

      if (i === index) {
        el.setAttribute('data-active', 'true');

        if (!prefersReducedMotion) {
          gsap.fromTo(el,
            { opacity: 0, scale: 0.8, y: yFrom * 0.5 },
            { opacity: 1, scale: 1, y: 0, duration: 0.7, ease: 'power3.out', delay: 0.15 }
          );
        }
      } else if (i === oldHobby) {
        if (!prefersReducedMotion) {
          gsap.to(el, {
            opacity: 0,
            scale: 0.9,
            y: yOffset * 0.3,
            duration: 0.4,
            ease: 'power2.in',
            onComplete: () => {
              el.setAttribute('data-active', 'false');
              gsap.set(el, { y: 0, scale: 1 });
            }
          });
        } else {
          el.setAttribute('data-active', 'false');
        }
      }
    });

    // Update ghost texts
    const prevTitle = getPrevHobbyTitle(index);
    const nextTitle = getNextHobbyTitle(index);

    if (!prefersReducedMotion) {
      // Update top ghost text (previous hobby)
      gsap.to(ghostTop, {
        opacity: 0,
        duration: 0.3,
        onComplete: () => {
          if (ghostTop) ghostTop.textContent = prevTitle;
          gsap.to(ghostTop, { opacity: 0.1, duration: 0.4 });
        }
      });
      // Update bottom ghost text (next hobby)
      gsap.to(ghostBottom, {
        opacity: 0,
        duration: 0.3,
        onComplete: () => {
          if (ghostBottom) ghostBottom.textContent = nextTitle;
          gsap.to(ghostBottom, { opacity: 0.1, duration: 0.4 });
        }
      });
    } else {
      if (ghostTop) ghostTop.textContent = prevTitle;
      if (ghostBottom) ghostBottom.textContent = nextTitle;
    }

    // Update floating clouds visibility
    updateFloatingClouds(hobbyIds[index]);

    // Update dots
    dots.forEach((dot, i) => {
      const dotElement = dot as HTMLElement;

      if (i === index) {
        dotElement.classList.remove('h-[10px]', 'bg-[#673437]/40');
        dotElement.classList.add('h-[42px]', 'bg-[#673437]');
        dotElement.setAttribute('aria-current', 'true');
      } else {
        dotElement.classList.remove('h-[42px]', 'bg-[#673437]');
        dotElement.classList.add('h-[10px]', 'bg-[#673437]/40');
        dotElement.setAttribute('aria-current', 'false');
      }
    });

    if (isAutoPlaying) {
      startProgressAnimation();
    }
  }

  function startProgressAnimation() {
    if (progressAnimation) {
      progressAnimation.kill();
    }

    if (progressBar && !prefersReducedMotion) {
      gsap.set(progressBar, { width: '0%' });
      progressAnimation = gsap.to(progressBar, {
        width: '100%',
        duration: autoPlayInterval / 1000,
        ease: 'none'
      });
    }
  }

  function startAutoPlay() {
    if (autoPlayTimer) {
      clearInterval(autoPlayTimer);
    }

    isAutoPlaying = true;
    startProgressAnimation();

    autoPlayTimer = setInterval(() => {
      const nextIndex = (currentHobby + 1) % totalHobbies;
      updateHobby(nextIndex, 'next');
    }, autoPlayInterval);
  }

  function stopAutoPlay() {
    if (autoPlayTimer) {
      clearInterval(autoPlayTimer);
      autoPlayTimer = null;
    }

    if (progressAnimation) {
      progressAnimation.pause();
    }

    isAutoPlaying = false;
  }

  // Dot navigation
  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      const direction = index > currentHobby ? 'next' : 'prev';
      updateHobby(index, direction);
      if (isAutoPlaying) {
        startAutoPlay();
      }
    });
  });

  // Arrow navigation
  prevBtn?.addEventListener('click', () => {
    const newIndex = currentHobby > 0 ? currentHobby - 1 : totalHobbies - 1;
    updateHobby(newIndex, 'prev');
    if (isAutoPlaying) startAutoPlay();
  });

  nextBtn?.addEventListener('click', () => {
    const newIndex = (currentHobby + 1) % totalHobbies;
    updateHobby(newIndex, 'next');
    if (isAutoPlaying) startAutoPlay();
  });

  // Keyboard navigation (up/down for vertical)
  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowUp') {
      e.preventDefault();
      const newIndex = currentHobby > 0 ? currentHobby - 1 : totalHobbies - 1;
      updateHobby(newIndex, 'prev');
      if (isAutoPlaying) startAutoPlay();
    } else if (e.key === 'ArrowDown') {
      e.preventDefault();
      const newIndex = (currentHobby + 1) % totalHobbies;
      updateHobby(newIndex, 'next');
      if (isAutoPlaying) startAutoPlay();
    }
  });

  // Touch swipe (vertical)
  let touchStartY = 0;
  let touchEndY = 0;

  slider?.addEventListener('touchstart', (e) => {
    touchStartY = e.changedTouches[0].screenY;
  }, { passive: true });

  slider?.addEventListener('touchend', (e) => {
    touchEndY = e.changedTouches[0].screenY;
    handleSwipe();
  }, { passive: true });

  function handleSwipe() {
    const swipeThreshold = 50;
    const diff = touchStartY - touchEndY;

    if (Math.abs(diff) > swipeThreshold) {
      if (diff > 0) {
        // Swipe up = next
        const newIndex = (currentHobby + 1) % totalHobbies;
        updateHobby(newIndex, 'next');
      } else {
        // Swipe down = prev
        const newIndex = currentHobby > 0 ? currentHobby - 1 : totalHobbies - 1;
        updateHobby(newIndex, 'prev');
      }
      if (isAutoPlaying) startAutoPlay();
    }
  }

  // Pause on hover
  slider?.addEventListener('mouseenter', () => {
    if (isAutoPlaying && progressAnimation) {
      progressAnimation.pause();
    }
  });

  slider?.addEventListener('mouseleave', () => {
    if (isAutoPlaying && progressAnimation) {
      progressAnimation.resume();
    }
  });

  // Initialize
  document.addEventListener('DOMContentLoaded', () => {
    contents.forEach((content, i) => {
      const el = content as HTMLElement;
      if (i === 0) {
        el.setAttribute('data-active', 'true');
      } else {
        el.setAttribute('data-active', 'false');
      }
    });

    illustrations.forEach((illus, i) => {
      const el = illus as HTMLElement;
      if (i === 0) {
        el.setAttribute('data-active', 'true');
      } else {
        el.setAttribute('data-active', 'false');
      }
    });

    // Add floating animations to some elements
    if (!prefersReducedMotion) {
      // Floating clouds for travel slide
      gsap.to('.cloud-float', { y: -15, duration: 3, repeat: -1, yoyo: true, ease: 'sine.inOut' });
      gsap.to('.cloud-float-slow', { y: -10, duration: 4, repeat: -1, yoyo: true, ease: 'sine.inOut', delay: 0.5 });

      // Floating clouds in illustrations
      gsap.to('.cloud-1', { y: -10, duration: 3, repeat: -1, yoyo: true, ease: 'sine.inOut' });
      gsap.to('.cloud-2', { y: -8, duration: 2.5, repeat: -1, yoyo: true, ease: 'sine.inOut', delay: 0.5 });
      gsap.to('.cloud-3', { y: -12, duration: 3.5, repeat: -1, yoyo: true, ease: 'sine.inOut', delay: 1 });

      // Pulsing heart
      gsap.to('.heart-pulse', { scale: 1.1, duration: 0.8, repeat: -1, yoyo: true, ease: 'sine.inOut', transformOrigin: 'center' });

      // Twinkling sparkles
      gsap.to('.sparkle-1', { opacity: 0.3, duration: 1.5, repeat: -1, yoyo: true, ease: 'sine.inOut' });
      gsap.to('.sparkle-2', { opacity: 0.3, duration: 1.2, repeat: -1, yoyo: true, ease: 'sine.inOut', delay: 0.3 });
      gsap.to('.sparkle-3', { opacity: 0.3, duration: 1.8, repeat: -1, yoyo: true, ease: 'sine.inOut', delay: 0.6 });

      startAutoPlay();
    }
  });

  // Cleanup
  document.addEventListener('astro:before-swap', () => {
    stopAutoPlay();
    if (progressAnimation) {
      progressAnimation.kill();
    }
  });

  // Reduced motion
  if (prefersReducedMotion) {
    gsap.globalTimeline.timeScale(0);
    stopAutoPlay();
    if (progressBar) {
      progressBar.style.display = 'none';
    }
  }
</script>


---
import { hobbies } from '@/data/hobbies';
import PenguinLogo from '@/components/icons/PenguinLogo.astro';

interface Props {
  autoPlayInterval?: number;
}

const { autoPlayInterval = 5000 } = Astro.props;
---

<section
  id="hobbies-slider"
  class="relative w-full min-h-screen overflow-hidden bg-[#FADCDE]"
  data-autoplay-interval={autoPlayInterval}
>
  <!-- Back Link -->
  <a
    href="/about#brain-section"
    class="absolute top-[80px] md:top-[120px] left-[20px] md:left-[80px] lg:left-[83px] z-30 text-[#673437] hover:opacity-70 transition-opacity flex items-center gap-2 text-[18px] md:text-[20px] lg:text-[24px]"
    style="font-family: 'Stacion', serif; font-weight: 400; line-height: 110%; letter-spacing: 0px;"
  >
    <span>‚Üê</span> <span class="underline">back</span>
  </a>

  <!-- My Hobbies Label with Penguin -->
  <div class="absolute top-[120px] md:top-[180px] lg:top-[200px] left-[20px] md:left-[80px] lg:left-[83px] z-20">
    <div class="flex items-center gap-1 md:gap-2">
      <span class="text-[36px] md:text-[72px] lg:text-[96px] font-display font-normal text-[#F5909A] leading-[110%] tracking-[0px]" style="background-blend-mode: multiply;">My</span>
      <span class="penguin-mini inline-flex items-center">
        <PenguinLogo width={110} height={82} class="w-10 md:w-20 lg:w-[110px]" />
      </span>
    </div>
    <span class="text-[36px] md:text-[72px] lg:text-[96px] font-display font-normal text-[#F5909A] leading-[110%] tracking-[0px] block" style="background-blend-mode: multiply;">Hobbies</span>
  </div>

  <!-- Circle Decoration - positioned like in design (right side, hidden on mobile) -->
  <div
    class="hidden md:block absolute right-[-200px] md:right-[-100px] lg:right-[-50px] top-[15%] w-[600px] h-[600px] md:w-[700px] md:h-[700px] lg:w-[800px] lg:h-[800px] rounded-full bg-[#F7EBEC] pointer-events-none"
    aria-hidden="true"
  ></div>

  <!-- Ghost Text Top (Previous Hobby) - Inside centered container -->
  <div class="absolute top-[40px] md:top-[75px] lg:top-[85px] left-0 right-0 z-5 hidden md:block">
    <div class="w-full max-w-[1440px] mx-auto px-[20px] md:px-[80px] lg:px-[83px]">
      <div
        id="ghost-top"
        class="pl-[120px] md:pl-[350px] lg:pl-[430px] text-[60px] md:text-[140px] lg:text-[170px] font-display font-normal text-[#673437] select-none pointer-events-none leading-[110%] tracking-[1px] opacity-10 whitespace-nowrap"
        aria-hidden="true"
      >
        {hobbies[hobbies.length - 1].title}
      </div>
    </div>
  </div>

  <!-- Ghost Text Bottom (Next Hobby) - Inside centered container -->
  <div class="absolute bottom-[20px] md:bottom-[40px] lg:bottom-[50px] left-0 right-0 z-5 hidden md:block">
    <div class="w-full max-w-[1440px] mx-auto px-[20px] md:px-[80px] lg:px-[83px]">
      <div
        id="ghost-bottom"
        class="pl-[120px] md:pl-[350px] lg:pl-[430px] text-[60px] md:text-[140px] lg:text-[170px] font-display font-normal text-[#673437] select-none pointer-events-none leading-[110%] tracking-[1px] opacity-10 whitespace-nowrap"
        aria-hidden="true"
      >
        {hobbies[1].title}
      </div>
    </div>
  </div>

  <!-- Floating Clouds (visible on travel slide, hidden on mobile) -->
  <div id="floating-clouds" class="hidden md:block absolute inset-0 pointer-events-none z-15 opacity-0" data-hobby="travel">

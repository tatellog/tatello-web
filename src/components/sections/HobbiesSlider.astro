  <div class="relative z-10 flex items-center min-h-screen pt-[200px] md:pt-[240px] lg:pt-[260px] pb-[100px] md:pb-[200px]">
    <div class="w-full max-w-[1440px] mx-auto px-[20px] md:px-[80px] lg:px-[83px]">
      <div class="flex flex-col lg:flex-row items-start lg:items-center gap-8 lg:gap-16">
        <!-- Text Content -->
        <div class="relative min-h-[280px] md:min-h-[250px] lg:min-h-[300px] w-full lg:w-[60%]">
          {hobbies.map((hobby, index) => (
            <div
              class="hobby-content absolute top-0 left-0 w-full pl-0 md:pl-[350px] lg:pl-[430px]"
              data-hobby-index={index}
              data-active={index === 0 ? 'true' : 'false'}

---
/**
 * Arrow - Navigation arrow icon
 */
interface Props {
  class?: string;
  size?: number;
  color?: string;
  direction?: 'left' | 'right' | 'up' | 'down';
  strokeWidth?: number;
}

const {
  class: className = '',
  size = 24,
  color = 'currentColor',
  direction = 'right',
  strokeWidth = 2
} = Astro.props;

const rotations = {
  right: 0,
  down: 90,
  left: 180,
  up: 270
};

const rotation = rotations[direction];
---

<svg
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class={className}
  style={`transform: rotate(${rotation}deg)`}
  aria-hidden="true"
>
  <path
    d="M9 18L15 12L9 6"
    stroke={color}
    stroke-width={strokeWidth}
    stroke-linecap="round"
    stroke-linejoin="round"
  />
</svg>

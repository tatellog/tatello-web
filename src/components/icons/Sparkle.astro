---
/**
 * Sparkle - 4-point star decoration from Figma design
 */
interface Props {
  class?: string;
  size?: number;
  color?: string;
}

const { class: className = '', size = 24, color = '#ffc4c8' } = Astro.props;
---

<svg
  width={size}
  height={size}
  viewBox="0 0 100 100"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class={className}
  aria-hidden="true"
>
  <path
    d="M50 0C50 27.6 72.4 50 100 50C72.4 50 50 72.4 50 100C50 72.4 27.6 50 0 50C27.6 50 50 27.6 50 0Z"
    fill={color}
  />
</svg>

---
/**
 * Menu - Hamburger menu icon
 */
interface Props {
  class?: string;
  size?: number;
  color?: string;
  strokeWidth?: number;
}

const {
  class: className = '',
  size = 24,
  color = 'currentColor',
  strokeWidth = 2
} = Astro.props;
---

<svg
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class={className}
  aria-label="Menu"
>
  <path
    d="M3 12h18M3 6h18M3 18h18"
    stroke={color}
    stroke-width={strokeWidth}
    stroke-linecap="round"
    stroke-linejoin="round"
  />
</svg>
